<UserControl x:Class="StrimoUI.Views.Login.LoadAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrimoUI.Views.Login"
             mc:Ignorable="d" >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Image Source="/StrimoUI;component/Resources/logo.png" Height="59" />
            <TextBlock Text="s t r i m o" FontSize="68" TextAlignment="Center" Foreground="{DynamicResource Gray_100}" Margin="0,0,0,188" />
            <TextBlock Text="LOADING ACCOUNT" FontSize="30" Foreground="{DynamicResource Gray_100}" TextAlignment="Center" Margin="0,0,0,62.5" />
            <ProgressBar x:Name="LoadAccountProgressBar" Value="{Binding LoadAccountProgressBarValue}"
                         Style="{DynamicResource CornerProgressBar}" Height="12" Width="592" Foreground="{DynamicResource White_300}" />
        </StackPanel>
    </Grid>
</UserControl>
